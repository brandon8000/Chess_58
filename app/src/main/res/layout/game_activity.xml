<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_activity"
    android:background="@color/defaultBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.software.group58.chess58.GameActivity">

    <GridLayout
        android:id="@+id/boardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerInParent="true"
    >

        <com.software.group58.chess58.TileView
            android:id="@+id/a3"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/contrast"
            android:layout_margin="@dimen/tileMargin"
            android:src="@drawable/white_knight"
            app:label="a3"
            app:currentPiece="@string/whiteKnight"
            android:onClick="handleInput" />

        <com.software.group58.chess58.TileView
            android:id="@+id/b3"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/tileMargin"
            app:label="b3"
            android:onClick="handleInput"
            />

        <com.software.group58.chess58.TileView
            android:id="@+id/c3"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/contrast"
            android:layout_margin="@dimen/tileMargin"
            app:label="c3"
            android:onClick="handleInput"
            />

        <com.software.group58.chess58.TileView
            android:id="@+id/a2"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/tileMargin"
            app:label="a2"
            android:onClick="handleInput"
            />

        <com.software.group58.chess58.TileView
            android:id="@+id/b2"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/contrast"
            android:layout_margin="@dimen/tileMargin"
            app:label="b2"
            android:src="@drawable/ic_menu_camera"
            android:onClick="handleInput"
            />

        <com.software.group58.chess58.TileView
            android:id="@+id/c2"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/tileMargin"
            app:label="c2"
            android:onClick="handleInput"
            />

        <com.software.group58.chess58.TileView
            android:id="@+id/a1"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/contrast"
            android:layout_margin="@dimen/tileMargin"
            app:label="a1"
            android:onClick="handleInput"
            />

        <com.software.group58.chess58.TileView
            android:id="@+id/b1"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/tileMargin"
            app:label="b1"
            android:onClick="handleInput"
            />

        <com.software.group58.chess58.TileView
            android:id="@+id/c1"
            android:layout_width="@dimen/tileSize"
            android:layout_height="@dimen/tileSize"
            android:background="@color/contrast"
            android:layout_margin="@dimen/tileMargin"
            app:label="c1"
            android:src="@drawable/chess_logo"
            android:onClick="handleInput"
            />


    </GridLayout>


</RelativeLayout>
